<% layout('layouts/boilerplate')%>

<h1 class="text-center" style="margin-bottom: 75px;">Your Created Routes...</h1>
<% var flag = 0; %> 
<% for (let route of routes){%>
    <%  if( currentUser && route.author.equals(currentUser._id))  {%>
        <% flag=1; %> 
        <div class="card mb-3" >
            <div class="row">
                <div class="col-md-4">
                    <% if(route.images[0]!=undefined){ %>
                        <img class="img-fluid" style="height: 100%;" alt="" src="<%=route.images[0].url%>">
                    <% }else{ %>
                        <img class="img-fluid" style="height: 100%;" alt="" src="https://res.cloudinary.com/sicklycycling-o6/image/upload/v1656388650/routeGuide/noimage-420x273_nju7gu.jpg">
                        <% } %> 
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= route.title %> </h5>
                        <p class="card-text"><%= route.description %></p>
                        <p class="card-text">
                            <small class="text-muted"><%= route.location%></small>
                        </p>
                        <a class="btn btn-primary" href="/routes/<%=route._id%>">View <%=route.title%></a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
<% }%>
<% if(!flag){ %>
    <div class="text-center">
        <h3 class=" mb-4">Start Creating Routes...</h3>
        <a href="/routes/new"><button class=" btn btn-info">Create Routes &raquo;</button></a>
        <!-- <button class=" btn btn-info" href="/routes/new">Create Routes &raquo;</button> -->
    </div>
<% } %>      
